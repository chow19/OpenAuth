@section header
{
    <link rel="stylesheet" href="/css/treetable.css" />
}

<blockquote class="layui-elem-quote news_search toolList" id="menus"></blockquote>

<div class="layui-row">
    <div class="layui-col-xs3">
        <input type="text" placeholder="请输入关键字" value="" class="layui-input" id="searchKey">
        <table class="layui-table"
               lay-data="{height: 'full-80', page:true, id:'leftMainList'}"
               lay-filter="leftMainList" lay-size="sm" lay-even>
            <thead>
                <tr> 
                    <th lay-data="{field:'FBillNo', width:150,event: 'show', sort: true, event: 'show', fixed: true}">订单号</th> 
                    <th lay-data="{field:'FEntryID', width:67}">行号</th>
                    <th lay-data="{field:'FName', width:205}">物料名称</th>
                    @*<th lay-data="{field:'FNumber', width:205}">物料编码</th>
                   

                    <th lay-data="{field:'FModel', width:135}">模具</th>
                    <th lay-data="{field:'FDate', width:100}">制单日期</th>
                    <th lay-data="{field:'CreatorName', width:100}">创建人</th>
                    <th lay-data="{field:'MakerName', width:100}">制单人</th>
                    <th lay-data="{field:'FVersionNo', width:100}">版本号</th>
                    <th lay-data="{field:'IsReview', width:50}">已审</th>*@
                </tr>
            </thead>
        </table>
    </div>
    <div class="layui-col-xs9">
        <div class="layui-row layui-col-space3" style="margin-top:5px;margin-bottom:5px;margin-left:5px;word-break:break-word;background-color:lightgray">
            <div class="layui-col-xs12">
                <div class="layui-row">
                    <div class="layui-col-xs12">
                        <h2 style="text-align:center">生产投料单</h2>
                    </div>
                </div>
                <div class="layui-row layui-col-space3">
                    <div class="layui-col-xs1">
                        合同编号:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="ContactNo"></label>
                    </div>
                    <div class="layui-col-xs1">
                        客户:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="CustomName"></label>
                    </div>
                    <div class="layui-col-xs1">
                        备注:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="Remark"></label>
                    </div>
                </div>

                <div class="layui-row layui-col-space3">
                    <div class="layui-col-xs1">
                        销售订单号:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="BillNo"></label>
                        <input type="hidden" id="FEntryID" />
                    </div>
                    <div class="layui-col-xs1">
                        生产订单号:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="MO"></label>
                    </div>
                    <div class="layui-col-xs1">
                        投料单号:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="FeedOrder"></label>
                    </div>
                </div>

                <div class="layui-row layui-col-space3">
                    <div class="layui-col-xs1">
                        产品代码:
                    </div>
                    <div class="layui-col-xs5">
                        <label id="ProNumber"></label> 
                        <input type="hidden" id="FItemID"/>
                    </div>
                    <div class="layui-col-xs1">
                        产品名称:
                    </div>
                    <div class="layui-col-xs5">
                        <label id="ProName"></label> 
                    </div>
                </div>

                <div class="layui-row layui-col-space3">
                    <div class="layui-col-xs1">
                        整单交期:
                    </div>
                    <div class="layui-col-xs5">
                        <label id="DeadLine"></label>
                    </div>
                    <div class="layui-col-xs1">
                        成品数量:
                    </div>
                    <div class="layui-col-xs5">
                        <label id="Qty"></label>
                    </div>
                </div>
            </div>
        </div>
        <div class="layui-row layui-col-space3">
            <div class="layui-col-xs12">
                <table class="layui-table" lay-even
                       lay-data="{height: 'full-200', page:true, id:'rightMainList'}"
                       lay-filter="list" lay-size="sm">
                    <thead>
                        <tr>
                            <th lay-data="{fixed: 'left',field:'SonItemNumberNo', width:150}">子项物料代码</th>
                            <th lay-data="{field:'SonItemName', width:150}">子项物料名称</th>
                            <th lay-data="{field:'PlanUsage', width:135}">计划投料数量</th>
                            <th lay-data="{field:'BaseUnit', width:135}">单位</th>
                            <th lay-data="{field:'FatherItemNumberNo', width:200}">父项物料代码</th>
                            <th lay-data="{field:'FatherItemName', width:380}">父项物料名称</th>
                            <th lay-data="{field:'LevelStr', width:80}">层数</th>
                            <th lay-data="{field:'Usage', width:80}">用量</th>
                            <th lay-data="{field:'BaseUnitUsage', width:180}">单位用量</th>
                            <th lay-data="{field:'FScrap', width:180}">损耗率（%）</th>
                            <th lay-data="{field:'FYield', width:180}">成品率（%）</th>
                            <th lay-data="{field:'Quality_Class', width:180}">质量级别_玻璃膜</th>
                            <th lay-data="{field:'Quality_Pet', width:180}">质量级别_PET膜</th>
                            <th lay-data="{field:'IdIsCheckOnPlace', width:180}">现场验货</th>
                        </tr>
                    </thead>
                </table>
            </div>
            
        </div>
    </div>
</div>

<script type="text/html" id="barList">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="ShowDetail">查看</a>
</script>

