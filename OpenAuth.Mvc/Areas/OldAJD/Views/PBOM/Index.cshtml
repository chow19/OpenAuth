@section header
{
    <link rel="stylesheet" href="/css/treetable.css" />
}

<blockquote class="layui-elem-quote news_search toolList" id="menus"></blockquote>

<div class="layui-row">
    <div class="layui-col-xs3">
        <input type="text" placeholder="请输入关键字" value="" class="layui-input" id="searchKey">
        <table class="layui-table"
               lay-data="{height: 'full-80', page:true, id:'leftMainList'}"
               lay-filter="leftMainList" lay-size="sm" lay-even>
            <thead>
                <tr>
                    <th lay-data="{type:'checkbox', fixed: 'left'}"></th>
                  
                    <th lay-data="{field:'BillNo', width:150 ,sort: true, fixed: true}">订单号</th>
                    <th lay-data="{field:'FEntryID', width:70}">行号</th>
                    <th lay-data="{field:'ProName', width:205}">物料名称</th>
                    <th lay-data="{field:'ProNumber', width:205}">物料编码</th> 
          
                    <th lay-data="{field:'CustomName', width:100}">客户</th> 
                    <th lay-data="{field:'AuxQty', width:100}">数量</th>  
                    <th lay-data="{field:'AttachUrl', width:100}">AttachUrl</th>  
                    <th lay-data="{field:'Remark', width:100}">Remark</th>  
                    <th lay-data="{field:'PBOMStates', width:100}">PBOMStates</th>  
                    
                    <th lay-data="{field:'Id', width:1}">Id</th>    
                </tr>
            </thead>
        </table>
    </div>
    <div class="layui-col-xs9">
        <div class="layui-row layui-col-space3" style="margin-top:5px;margin-bottom:5px;margin-left:5px;word-break:break-word;background-color:lightgray">
            <div class="layui-col-xs12">
                <div class="layui-row">
                    <div class="layui-col-xs12">
                        <h2 style="text-align:center">生产投料单</h2>
                    </div>
                </div>
                <div class="layui-row layui-col-space3">
                    
                    <div class="layui-col-xs1">
                        客户:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="CustomName"></label>
                    </div>
                    <div class="layui-col-xs1">
                        备注:
                    </div>
                    <div class="layui-col-xs7">
                        <label id="Remark_"></label>
                    </div>
                </div>

                <div class="layui-row layui-col-space3">
                    <div class="layui-col-xs1">
                        销售订单号:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="BillNo"></label>
                    </div>
                    <div class="layui-col-xs1">
                        生产订单号:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="MO"></label>
                    </div>
                    <div class="layui-col-xs1">
                        投料单号:
                    </div>
                    <div class="layui-col-xs3">
                        <label id="FeedOrder"></label>
                    </div>
                </div>

                <div class="layui-row layui-col-space3">
                    <div class="layui-col-xs1">
                        产品代码:
                    </div>
                    <div class="layui-col-xs5">
                        <label id="ProNumber"></label>
                        <input type="hidden" id="FItemID" />
                    </div>
                    <div class="layui-col-xs1">
                        产品名称:
                    </div>
                    <div class="layui-col-xs5">
                        <label id="ProName"></label>
                    </div>
                </div>

                <div class="layui-row layui-col-space3">
                    <div class="layui-col-xs1">
                        整单交期:
                    </div>
                    <div class="layui-col-xs5">
                        <label id="DeadLine"></label>
                    </div>
                    <div class="layui-col-xs1">
                        成品数量:
                    </div>
                    <div class="layui-col-xs5">
                        <label id="AuxQty"></label>
                    </div>
                </div>
            </div>
        </div>
        <div class="layui-row layui-col-space3">
            <div class="layui-col-xs12 ">
                <table class="layui-table" lay-even
                       lay-data="{height: 'full-200', page:true, id:'rightMainList'}"
                       lay-filter="rightMainList" lay-size="sm">
                    <thead>
                        <tr>
                            <th lay-data="{fixed: 'left',field:'SonItemNumberNo', width:150}">子项物料代码</th>
                            <th lay-data="{field:'SonItemName', width:150}">子项物料名称</th>
                            <th lay-data="{field:'PlanUsage', width:135}">计划投料数量</th>
                            <th lay-data="{field:'BaseUnit', width:135}">单位</th>  
                            <th lay-data="{field:'PlanUsage', width:80}">用量</th> 
                            <th lay-data="{field:'ReveicedQty',  edit: 'text',width:80}">可领</th>  
                            <th lay-data="{field:'IsOk',width:80}">OK?</th>  
 
                            <th lay-data="{field:'Remark', edit: 'text', minWidth: 100}">备注</th>
                            @*<th lay-data="{fixed: 'left', width:70, align:'center', toolbar: '#toolbar'}"></th>*@
                        </tr>
                    </thead>
                </table>
            </div> 
        </div>
    </div>
</div>

